@model ERP.Models.Shade
<!-- Modal -->
<div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Shade/Item </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("Save", "Shade_Item", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col mb-3">
                            <label for="nameWithTitle" class="form-label">Shade/Item</label>
                            @Html.TextBoxFor(m => m.ShadeName, new { @class = "form-control", @placeholder = "Enter Shade/Item" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"> Close </button>
                    <input type="submit" name="Save" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>