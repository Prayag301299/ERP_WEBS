@model ERP.ViewModel.ShadeViewModel
@{
    Layout = null;
}


@using (Html.BeginForm("Save", "Shade_Item", FormMethod.Post))
{
    <div class="col-lg-12">
        <div class="row">
            <div class="col mb-3">
                <label for="nameWithTitle" class="form-label">Shade/Item</label>
                @Html.HiddenFor(m => m.Id)
                @Html.TextBoxFor(Model => Model.ShadeName, new { @class = "form-control", @placeholder = "Enter Shade/Item Name" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"> Close </button>
            <input type="submit" name="Save" value="Save" class="btn btn-primary" />
        </div>
    </div>
}