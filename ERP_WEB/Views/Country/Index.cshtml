    ViewData["Title"] = "Country";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-6">
            <h4 class="fw-bold"> Country</h4>
        </div>
        <div class="col-6" style="text-align:right;">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCenter"> Add Country </button>
        </div>
    </div>

    <!-- Bootstrap modals -->
