                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Enter Legal Status" />
                            </div>
                            <div class="col mb-3">
                                <label for="nameWithTitle" class="form-label">Nature of Business</label>
                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Enter Nature of Business" />
                            </div>
