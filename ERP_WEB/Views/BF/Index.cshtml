@model ERP.ViewModel.BFViewModel
@{
    ViewData["Title"] = "BF";
}

<link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-6">
            <h4 class="fw-bold"> BF</h4>
        </div>
        <div class="col-6" style="text-align:right;">
            <button id="btnAddbf" class="btn btn-primary">Add BF</button>
            @*<button class="btn btn-primary" id="btnAddbf"> Add  </button>*@
        </div>
    </div>

    <!-- Bootstrap modals -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <div class="table-responsive text-nowrap">
                <table class="table" id="tblBf" style="width:100%">
                    <thead>
                        <tr>
                            <th>BF</th>
                            <th></th>
                            <th></th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (@ViewBag.BF != null)
                        {
                            @foreach (var item in @ViewBag.BF)
                            {
                                <tr>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.BF</strong></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <div class="dropdown" style="position:unset !important">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#modalCenter" onclick="AddOrEditbf(@item.Id)"><i class="bx bx-edit-alt me-1"></i> Edit </a>
                                                @*<a class="dropdown-item" href="javascript:void(0);" onclick="AddOrEditbf(@item.Id)"><i class="bx bx-edit-alt me-1"></i> Edit</a>*@
                                                <a class="dropdown-item" href="javascript:void(0);" onclick="Deletebf(@item.Id)"><i class="bx bx-trash me-1"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>No Record Found</strong></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>






        <div class="modal fade" id="modal-common">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCenterTitle">BF</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>One fine body&hellip;</p>
                    </div>
                   
                </div>
            </div>
        </div>

        <hr class="m-0" />
    </div>
    <!--/ Bootstrap modals -->
</div>




@section scripts
{
    <script src=@Url.Content("~/js/Common.js")></script>
    <script src=@Url.Content("~/lib/Common/bf.js")></script>



    <script src="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js")"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>




    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
}
