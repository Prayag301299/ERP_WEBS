@model IEnumerable<ERP.Models.CityMaster>
@{
    ViewData["Title"] = "City";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-6">
            <h4 class="fw-bold">City</h4>
        </div>
        <div class="col-6" style="text-align:right;">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCenter"> Add City </button>
        </div>
    </div>

    <!-- Bootstrap modals -->
    <div class="container-xxl flex-grow-1 container-p-y">
        @*<h5 class="card-header">Bootstrap modals</h5>*@
        <div class="card">
            @*<h5 class="card-header">Table Basic</h5>*@
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>City Name</th>
                            <th>State Name</th>
                            <th>Country Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CityName</strong></td>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.StateId</strong></td>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CountryId</strong></td>
                                    <td>
                                        <div class="dropdown" style="position:unset !important">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript:void(0);" onclick="AddOrEditCity(@item.Id)"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                <a class="dropdown-item" href="javascript:void(0);" onclick="DeleteCity(@item.Id)"><i class="bx bx-trash me-1"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center"><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>No Record Found</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>



        <!-- Modal -->
        <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCenterTitle">City</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col mb-3">
                                <label for="nameWithTitle" class="form-label">Select Country</label>
                                <select class="form-control">
                                    <option value="1">India</option>
                                    <option value="2">USA</option>
                                    <option value="3">Canada</option>
                                </select>
                            </div>
                            <div class="col mb-3">
                                <label for="nameWithTitle" class="form-label">Select State</label>
                                <select class="form-control">
                                    <option value="1">Gujrate</option>
                                    <option value="2">New york</option>
                                    <option value="3">Ottawa</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mb-3">
                                <label for="nameWithTitle" class="form-label">City Name</label>
                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Enter City Name" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"> Close </button>
                        <button type="button" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>


        <hr class="m-0" />
    </div>
    <!--/ Bootstrap modals -->
</div>


@section scripts
{
    <script src="~/lib/Common/City.js"></script>
}